<!doctype html>
<html>
  <head>
    <title>f1le - files</title>
    <link rel="stylesheet" type="text/css" href="styles/shared.css">
    <link rel="stylesheet" type="text/css" href="styles/files.css">
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="images/icon.png" />
    <meta name="viewport" content="width=750">
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="scripts/pentagons.js"></script>
    <script src="scripts/files.js"></script>
    <script src="scripts/dialog.js"></script>
  </head>
  <body>
    <canvas id="pentagons"></canvas>
    <a id="back" href="/">Home</a>
    <br />
    <div id="files">
      {{#files}}
      <table class="file-table">
        <tr>
          <td>
            <div class="file">
              <input type="hidden" value="{{id}}" class="file-id">
              <img class="file-icon" src="{{icon}}" />
              <a class="file-name" href="/view/{{id}}">{{name}}</a>
              <label class="file-size">{{size}}</label>
              <a class="download" href="/get/{{id}}">Download</a>
            </div>
          </td>
          <td class="close-td">
            <button class="delete"
              onclick="javascript:window.app.files.delete('{{id}}')"></button>
          </td>
        </tr>
      </table>
      {{/files}}
      {{^files}}
      <div class="no-files">No files.</div>
      {{/files}}
    </div>
  </body>
</html>